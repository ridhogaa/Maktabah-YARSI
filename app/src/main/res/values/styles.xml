<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlaceholderTextAppearance">
        <item name="android:textColor">@color/neutral_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="switch_notif" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/grey</item>
    </style>

    <style name="tabFont" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/color</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>