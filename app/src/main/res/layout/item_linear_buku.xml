<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:elevation="2dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cover_buku"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/coverbook"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_judul_buku"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Buku Pintar Islam"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cover_buku"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_penulis_buku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Oleh Prof. Dr. H. Nasaruddin Umar, MA"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cover_buku"
                app:layout_constraintTop_toBottomOf="@id/tv_judul_buku" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_desc_buku"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="4"
                android:text="Buku Islam Nusantara oleh Prof. Dr. H. Nasaruddin Umar, MA adalah sebuah karya yang menggambarkan peran Islam dalam konteks budaya, sejarah, dan masyarakat di wilayaah Nusantara seperti indonesia... "
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cover_buku"
                app:layout_constraintTop_toBottomOf="@id/tv_penulis_buku" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_file"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/file"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_jumlah_halaman"
                app:layout_constraintStart_toEndOf="@+id/cover_buku"
                app:layout_constraintTop_toBottomOf="@id/tv_desc_buku" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_jumlah_halaman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|center_vertical"
                android:padding="2dp"
                android:text="124 Halaman"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/icon_favorite_fill"
                app:layout_constraintStart_toEndOf="@+id/icon_file"
                app:layout_constraintTop_toBottomOf="@+id/tv_desc_buku" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_favorite_fill"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/favoritebook_fill"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_jumlah_halaman"
                app:layout_constraintTop_toBottomOf="@+id/tv_desc_buku" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>