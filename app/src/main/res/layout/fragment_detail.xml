<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".ui.detail_buku.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/iconback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_detail_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Buku"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_detail_buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cover_buku"
        android:layout_width="167dp"
        android:layout_height="232dp"
        android:src="@drawable/book_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/judul_buku"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="Islam Nusantara"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cover_buku"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/oleh"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="Oleh"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/judul_buku"
            app:layout_constraintStart_toEndOf="@id/cover_buku"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pencipta"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="Prof. Dr. H. Nasaruddin Umar, MA"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/green_maktabah"
            app:layout_constraintTop_toBottomOf="@id/oleh"
            app:layout_constraintStart_toEndOf="@id/cover_buku"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_rincian_buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/group_detail_buku"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_jumlah_buku_terbaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_jumlah_buku_terbaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="275"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"
                android:textColor="@color/neutral_950"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_terbaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terbaca"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/neutral_400"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_jumlah_buku_terbaca"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="2dp"
            android:layout_height="48dp"
            android:background="@color/neutral_950"
            app:layout_constraintStart_toEndOf="@id/group_jumlah_buku_terbaca"
            app:layout_constraintEnd_toStartOf="@id/group_jumlah_halaman_buku"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_jumlah_halaman_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/line1"
            app:layout_constraintEnd_toStartOf="@id/line2"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_jumlah_halaman_buku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"
                android:textColor="@color/neutral_950"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_halaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Halaman"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/neutral_400"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_jumlah_halaman_buku"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/line2"
            android:layout_width="2dp"
            android:layout_height="48dp"
            android:background="@color/neutral_950"
            app:layout_constraintStart_toEndOf="@id/group_jumlah_halaman_buku"
            app:layout_constraintEnd_toStartOf="@id/group_tahun_rilis"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_tahun_rilis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tahun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2010"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"
                android:textColor="@color/neutral_950"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_rilis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahun"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/neutral_400"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_tahun"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/group_rincian_buku"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/neutral_950"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buku Islam Nusantara oleh Prof. Dr. H. Nasaruddin Umar, MA adalah sebuah karya yang menggambarkan peran Islam dalam konteks budaya, sejarah, dan masyarakat di wilayah Nusantara, yang meliputi Indonesia dan sebagian dari wilayah tetangga seperti Malaysia dan Filipina. Buku ini menjelaskan bagaimana Islam tumbuh dan berkembang di wilayah ini seiring waktu dan bagaimana ajaran Islam menyatu dengan budaya-budaya lokal."
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/neutral_950"
            android:textSize="12sp"
            android:gravity="start|end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_mulai_membaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_fav"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_green_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/favoritbook_green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="265dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_green"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/btn_fav"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai Membaca"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/neutral_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>