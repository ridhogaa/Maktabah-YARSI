<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".ui.isi_buku.IsiBuku">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/iconback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_baca_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baca Buku"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_judul_buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/judul_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Islam Nusantara"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/oleh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oleh"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/judul_buku" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pencipta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prof. Dr. H. Nasaruddin Umar, MA"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            android:textColor="@color/green_maktabah"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/judul_buku"
            app:layout_constraintStart_toEndOf="@id/oleh"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/isi_buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/group_judul_buku">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bab 1 Mengenal Islam"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sub_bab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bab 1.1 Sebaran Islam ke Indonesia"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bab"
            />

