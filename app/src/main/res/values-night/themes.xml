<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MaktabahYARSI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_maktabah</item>
        <item name="colorPrimaryVariant">@color/green_maktabah</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_maktabah</item>
        <item name="colorSecondaryVariant">@color/green_maktabah</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/black_pearl_transparent</item>
        <item name="android:statusBarColor">@color/black_pearl_transparent</item>
        <item name="background">@color/black</item>
        <item name="searchViewStyle">@color/white</item>
        <item name="color">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_wrapper</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MaktabahYARSI</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/black_pearl_transparent</item>
    </style>

    <style name="Theme.MaktabahYARSI" parent="Base.Theme.MaktabahYARSI" />

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>